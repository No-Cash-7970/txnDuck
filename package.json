{
  "name": "txnduck",
  "version": "0.8.0",
  "private": true,
  "scripts": {
    "compile-locales": "gulp compileLocales --no-color",
    "dev": "gulp prebuild --no-color && next dev",
    "build": "gulp prebuild --no-color && next build",
    "start": "next start",
    "lint": "next lint --ext .js --ext .mjs --ext .cjs --ext .jsx --ext .ts --ext .mts --ext .cts --ext .tsx --ext .yml --ext .yaml",
    "prod": "yarn build && next start",
    "release": "release-it --ci && gulp postRelease --no-color",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "test:e2e": "yarn compile-locales && playwright test",
    "install:dev": "yarn install && gulp installDev --no-color"
  },
  "dependencies": {
    "@algorandfoundation/algokit-utils": "^5.8.0",
    "@blockshake/defly-connect": "^1.1.6",
    "@daffiwallet/connect": "^1.0.3",
    "@perawallet/connect": "^1.3.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-toast": "^1.1.5",
    "@tabler/icons-react": "^2.47.0",
    "@tailwindcss/typography": "^0.5.13",
    "@txnlab/use-wallet": "^2.8.2",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "accept-language": "^3.0.18",
    "algosdk": "^2.7.0",
    "autoprefixer": "^10.4.19",
    "daisyui": "^4.11.1",
    "gulp": "^4.0.2",
    "gulp-execa": "^6.0.0",
    "gulp-rename": "^2.0.0",
    "i18next": "^23.11.4",
    "i18next-browser-languagedetector": "^7.2.1",
    "i18next-resources-to-backend": "^1.2.1",
    "jotai": "^2.8.0",
    "jotai-form": "^0.1.6",
    "js-yaml": "^4.1.0",
    "lute-connect": "^1.2.0",
    "next": "^14.2.3",
    "next-pwa": "^5.6.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "use-debounce": "^10.0.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@playwright/test": "^1.44.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@swc-jotai/react-refresh": "^0.1.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^20.12.12",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-yml": "^1.14.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lefthook": "^1.6.11",
    "release-it": "^17.2.1",
    "ts-jest": "^29.1.2",
    "yaml-eslint-parser": "^1.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): bump to v${version}",
      "tagName": "v${version}",
      "tagAnnotation": "Release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "writerOpts": {
          "mainTemplate": "{{#each commitGroups}}\n\n### {{title}}\n\n{{#each commits}}\n{{> commit root=@root}}\n{{/each}}\n{{/each}}\n\n{{> footer}}",
          "footerPartial": "{{#if noteGroups}}\n{{#each noteGroups}}\n\n### {{title}}\n\n{{#each notes}}\n* {{text}}\n{{/each}}\n{{/each}}\n{{/if}}"
        }
      }
    }
  },
  "packageManager": "yarn@4.0.2"
}
