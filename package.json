{
  "name": "txnduck",
  "version": "0.14.0",
  "private": true,
  "scripts": {
    "compile-locales": "gulp compileLocales",
    "dev": "gulp prebuild && next dev",
    "build": "gulp prebuild && next build",
    "build:standalone": "gulp buildStandalone",
    "build:standalone:zip": "gulp buildZipStandalone",
    "start": "next start",
    "lint": "next lint --ext .js --ext .mjs --ext .cjs --ext .jsx --ext .ts --ext .mts --ext .cts --ext .tsx --ext .yml --ext .yaml",
    "prod": "yarn build && next start",
    "release": "release-it --ci",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "test:e2e": "yarn compile-locales && playwright test",
    "install:dev": "yarn install && gulp installDev"
  },
  "dependencies": {
    "@agoralabs-sh/avm-web-provider": "^1.7.0",
    "@blockshake/defly-connect": "^1.2.1",
    "@magic-ext/algorand": "^25.0.0",
    "@perawallet/connect": "^1.4.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-toast": "^1.2.15",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "@txnlab/use-wallet-react": "^4.3.1",
    "@types/react": "^19.1.15",
    "@types/react-dom": "19.1.9",
    "@walletconnect/modal": "^2.7.0",
    "@walletconnect/sign-client": "^2.21.9",
    "accept-language": "^3.0.20",
    "algosdk": "^3.5.2",
    "archiver": "^7.0.1",
    "daisyui": "^5.1.25",
    "gulp": "^5.0.1",
    "gulp-execa": "^8.0.1",
    "gulp-rename": "^2.1.0",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-resources-to-backend": "^1.2.1",
    "jotai": "^2.15.0",
    "jotai-form": "^0.1.6",
    "js-yaml": "^4.1.0",
    "lute-connect": "^1.6.2",
    "magic-sdk": "^30.0.0",
    "next": "15.5.4",
    "next-pwa": "^5.6.0",
    "postcss": "^8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-i18next": "^16.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "use-debounce": "^10.0.6",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.55.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc-jotai/react-refresh": "^0.3.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^24.6.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-testing-library": "^7.11.0",
    "eslint-plugin-yml": "^1.18.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-wip-reporter": "^2.1.0",
    "lefthook": "^1.13.5",
    "release-it": "^19.0.5",
    "ts-jest": "^29.4.4",
    "yaml-eslint-parser": "^1.3.0"
  },
  "resolutions": {
    "conventional-changelog-conventionalcommits": "8.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): bump to v${version}",
      "tagName": "v${version}",
      "tagAnnotation": "Release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "hooks": {
      "after:git:release": "gulp postRelease"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "writerOpts": {
          "mainTemplate": "{{#each commitGroups}}\n\n### {{title}}\n\n{{#each commits}}\n{{> commit root=@root}}\n{{/each}}\n{{/each}}\n\n{{> footer}}",
          "footerPartial": "{{#if noteGroups}}\n{{#each noteGroups}}\n\n### {{title}}\n\n{{#each notes}}\n* {{text}}\n{{/each}}\n{{/each}}\n{{/if}}"
        }
      }
    }
  },
  "packageManager": "yarn@4.10.3"
}
